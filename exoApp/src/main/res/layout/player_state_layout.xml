<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerStateContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/currentBitrateTxt"
            style="@style/player_state_text"
            android:text="@string/current_bitrate"
            tools:text="@string/current_bitrate" />

        <TextView
            android:id="@+id/currentFramerateTxt"
            style="@style/player_state_text"
            android:text="@string/current_framerate"
            tools:text="@string/current_framerate" />

        <TextView
            android:id="@+id/currentPlayheadTxt"
            style="@style/player_state_text"
            android:text="@string/current_playhead"
            tools:text="@string/current_playhead" />

        <TextView
            android:id="@+id/currentPlaylistUriTxt"
            style="@style/player_state_text"
            android:text="@string/current_playlist_uri"
            tools:text="@string/current_playlist_uri" />

    </LinearLayout>

</ScrollView>
