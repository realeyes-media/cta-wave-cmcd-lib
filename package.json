{
    "name": "cmcd",
    "version": "0.1.0",
    "description": "CMCD Scripts",
    "scripts": {
        "build:cmcd": "cd cmcd && ./gradlew build",
        "changelog": "conventional-changelog -i CHANGELOG.md -s -p angular -r 0",
        "cz": "cz --hook",
        "link:js": "cd cmcd/build/js/packages/cmcd && npm link",
        "link:hlsjs": "cd examples/hlsjs && npm link cmcd",
        "link": "npm run build:cmcd && npm run link:js && npm run link:hlsjs"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/realeyes-media/cmcd.git"
    },
    "keywords": [
        "cmcd",
        "cta",
        "wave"
    ],
    "author": "RealEyes Media, LLC <info@realeyes.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/realeyes-media/cmcd/issues"
    },
    "private": true,
    "devDependencies": {
        "commitizen": "4.2.1",
        "conventional-changelog-cli": "2.1.0",
        "cz-conventional-changelog": "3.3.0",
        "husky": "4.3.0"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && npm run cz || true"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
